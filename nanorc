syntax "shellscript" "\.sh$" "\.?profile$" "\.?bashrc$" "\.?cshrc$" "^rc\..*"  "\.?akefile$"
	color brightblue "\<(case|do|done|elif|else|esac|exit|fi|for|function|if|in|local|read|return|select|shift|then|time|until|while)\>"
	color white "(\{|\}|\(|\)|\;|\]|\[|`|\\|<|>|!|=|&|\|)"   
	color brightcyan "`(\\.|[^`])*`"
	color yellow ""(\\.|[^\"])*""
	color yellow "'(\\.|[^'])*'" 
	color cyan "\$\{[^}]*\}"
	color cyan "\$#"
	color green "((^#)|(\s#)).*$"   
	color brightgreen "#!.*$"

